<% include ../partials/header %>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">

                        <header class="jumbotron">
                            <div class="container">
                                <h1>Edit Department</h1>
                            </div>
                        </header>

                    <div class="content">

                        <form class="col s12" action="/departments/<%= department._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label for="dep_name">Department Name</label>
                                        <input placeholder="Department Name" value="<%= department.name %>" name="dep_name" type="text" class="form-control" required="required">
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="dep_key">Department Key</label>
                                        <input placeholder="Department Key" value="<%= department.key %>" id="dep_key" type="text" name="dep_key"
                                                class="form-control"
                                                required="required">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="dep_date">Department Opened Since</label>
                                        <input id="dep_date" name="dep_date" type="number" placeholder="Ex:2014"
                                                class="form-control" value="<%= department.since %>"
                                                required="required">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                        <div class="form-group">
                                                <br><br>
                                                
                                                <div class="form-group col-md-12  ">
                                                        <label for="summernote">Department Description</label>  
                                                            <textarea id="summernote" name="dep_description" class="form-control" required="required"><%=department.description%></textarea>
                                                        </div>
                                            </div>
                                </div>
                            </div> 
                            <br><br>                               
                            
                            <br><br>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="depart_desc">Department Description File</label>
                                        <input id="depart_desc" class="form-control" name="my_file" type="file"
                                               required="required">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="dep_logo">Department logo</label>
                                        <input id="dep_logo" class="form-control" name="my_file" type="file"
                                               required="required">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="depart_desc">Courses File</label>
                                        <input id="depart_desc" class="form-control" name="my_file" type="file"
                                               required="required">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="dep_logo">Courses Tree</label>
                                        <input id="dep_logo" class="form-control" name="my_file" type="file"
                                               required="required">
                                    </div>
                                </div>
                            </div>
                            <br><br>
                            <div class="row">
                                <div class="col-md-8">
                                    <button class="btn btn-info btn-fill pull-left" type="submit">Update Department
                                    </button>
                                </div>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<% include ../partials/footer %>




