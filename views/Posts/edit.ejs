<%include ../partials/header%>
<div class="container" >
    <div class="row">
         <h1 style="text-align: center;"> Edit  <%= post.name %> </h1>
    
         <div style="width:30%; margin:25px auto;">
           <form action="/groups/<%= group %>/<%= post._id %>?_method=PUT" method="POST" >
            <div class="form-group"> 
                    <input class="form-control" type="text" name="image" value="<%= post.image %>" >
            </div>
            <div class="form-group"> 
                    <input class="form-control" type="text" name="content" value="<%= post.content %>" >
            </div>
           <div class="form-group">
              <button class="btn btn-lg btn-primary btn-block"  > Edit!!</button>
            </div>
           </form>
          </div>
    </div>
    </div>


<%include ../partials/footer%>