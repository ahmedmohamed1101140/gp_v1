                        <textarea class="textarea" style="width:500px; height:200px ;margin-left:-80px;" name="content" placeholder="  Entey your Post..." required="true"></textarea>
                        
                </div>
                <div class="form-group">
                                <label for="post_photo">Post Photo</label>
