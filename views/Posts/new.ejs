<%include ../partials/header%>
<div class="container" >
        <div class="row">
             <h1 style="text-align: center;"> Add a New Post to <%= group.name %> </h1>
        
             <div style="width:30%; margin:25px auto;">
               <form action="/groups/<%= group._id %>/posts" method="POST"  enctype="multipart/form-data" >
                <div class="form-group">
                        <label for="post_photo">Post Photo</label>
                        <input id="post_photo" class="form-control" name="my_image" type="file">
                  </div>
                <div class="form-group" style="width:400px; height:200px ;margin-left:0px;"> 
                        <label for="summernote">Post Content:</label>  
                        <textarea id="summernote" name="content" class="form-control" required="required"></textarea>
                     </div>
        
              
                <br><br><br><br><br>
               <div class="form-group">
                  <button class="btn btn-lg btn-primary btn-block"> Post</button>
                </div>
               </form>
              </div>
        </div>
        </div>
 <%include ../partials/footer%>