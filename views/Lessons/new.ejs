<%include ../partials/header%>

<div class="container-fluid">
        <div class="row ">
                    <div class="card">
    
                        <div class="header">
                            <h4 class="title">Add New Lesson</h4>
                            <br>
                        </div>
                

    <div class="content">
        <form id="form" action="/courses/<%=course._id%>/lesson/<%=CurrentUSer.firstname+' '+CurrentUSer.lastname%>" method="POST" enctype="multipart/form-data" >
            <div class="row">

                <div class="form-group col-md-8 ">
                        <label for="lesson_name">Lesson Name</label>
                    <input  name="lesson_name" type="text" class="form-control" required="required">
                    
                </div>
             
               <div class="form-group col-md-4">
                    <div class="form-group">
                                        <label class=" control-label">lesson type </label>
                                           <div class="">
                                            <select id="basic"  name ="lesson_type" class="selectpicker show-tick form-control" >
                                            <option>lecture Work</option>
                                            <option>Lab Work</option>
                                            <option>Exams</option>
                                            <option>Others</option>

                                            </select>
                         </div>
                    </div>
                </div>
            </div>
            <div class="row">
                    <div class="form-group col-md-12  ">
                 <label for="froala-editor">Lesson Description</label>  
                   <textarea id="froala-editor" name="lesson_description"  class="form-control" rows="6" required="required"></textarea>
                    
                </div>
            </div>
            
            <div class="row">
            
                <div class="form-group col-md-4 " >
                        <label for="my_file">Lesson File</label>
                             <input id="my_file" class="form-control" name="my_file" type="file"required="required">
                      </div>
            </div>
           
                 
          
             
                
                   
                

                     <div class="row">
                   <div class="col-md-8">
                        <button class="btn btn-info btn-fill pull-left confirmation-callback" type="submit">Add Lesson </button>
                        </div>
            </div>  
        </form>
    </div>
   </div>
 
 </div>
</div>


<%include ../partials/footer%>




