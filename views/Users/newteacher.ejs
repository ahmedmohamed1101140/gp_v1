
<%include ../partials/header%>
<div class="container">

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">

                    <header class="jumbotron">
                            <div class="container">
                                <h2>Add New User</h2>
                            </div>
                        </header>

                    <div class="content">
                        <form action="/Users/createteachers" method="POST">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label for="email">email</label>
                                        <input placeholder="User email" name="email" type="email" class="form-control" required="required">
                                    </div>
                                </div>
                                <div class="col-md-4">
                                        <div class="form-group">
                                            <label class=" control-label">User Type</label>
                                            <div class="">
                                                <select  name="usertype" id="basic" class="selectpicker show-tick form-control" data-live-search="true">   
                                                    <option value="1"> Instructor </option>
                                                    <option value="2"> T.Assistant </option>
                                                    <option value="3"> Staff </option>
                                                    <option value="0"> Admin </option>
                                                </select>
                                            </div>
                                        </div>
                                </div>
                            </div>
                            <br><br>
                            <div class="row">
                                <div class="col-md-2">
                                    <button class="btn btn-info btn-fill pull-left" type="submit">Add User </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>





</div>

<%include ../partials/footer%>