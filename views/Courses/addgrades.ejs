<%include ../partials/header%>

<div class="container">

    <form  id="form"action="/courses/<%=course._id%>/grades?_method=PUT" method="POST">
        <div class="row"> 
            <div class="form-group col-md-4 ">
                <label for="grade_name">Grade for  </label>
            <input  name="grade_name" type="text" class="form-control" required="required">
        </div>
        <div class="form-group col-md-4 ">
            <label for="grade_totalgradescore">Total score</label>
        <input  name="grade_totalgradescore" type="number" class="form-control" required="required">
    </div>
    <div class="form-group col-md-4 ">
        <label for="grade_precentage">precentage %</label>
    <input  name="grade_precentage" type="number" class="form-control" required="required">
</div>
        </div>
        <div class="row">
                <div class="container col-md-10" style="margin:auto auto;">
                        <table id="example" class="table table-striped table-bordered  " >
                    <thead>
                    <tr>
                        <th>Collage_ID</th>
                        <th>Student score</th>
                     
                    </tr>
                    </thead>
                    <tbody>
            
           <% course.student_registrated.forEach(function(student){ %>
            <tr>
                    <td><%=student%></td>
                    <td>
                     <input  name="<%=student%>" type="number" class="form-control" required="required">
                    </td>
             
                </tr>
        
                 <% });%>
        
                </tbody>
            </table>
        </div>
            
        </div>
        <button type="submit" class="btn btn-info btn-fill pull-left confirmation-callback">Put Grades</button>
        <div class="clearfix"></div>
    </form>

   
</div>


<%include ../partials/footer%>