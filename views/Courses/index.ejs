<%include ../partials/header%>

<div class="container">
        <h3>Courses</h3>

        <div class="row">
                <% courses.forEach(function (course) { %>
                <div class="col s12 m4">
                        <div class="card sticky-action">
                                <div class="card-image">
                                  <img class="activator" src="http://muc.edu.om/Research_Centre/img/foundation.png">
                                  <a class="btn-floating activator halfway-fab waves-effect waves-light red"><i class="material-icons">add</i></a>
                                </div>
                                <div class="card-content">
                                         <span class="card-title activator grey-text text-darken-4"><%= course.name%></span>
                                        <p><a href="/courses/<%= course._id%>">More Details...</a></p>
                                </div>
                                <div class="card-action">
                                        <a href="/courses/edit/<%= course._id %>" class="btn">Edit</a>
                                        <form style="display:inline;" action="/courses/<%= course._id %>?_method=DELETE" method="POST">
                                                <button class="btn">Delete</button>
                                        </form>
                                </div>
                                <div class="card-reveal">
                                         <span class="card-title grey-text text-darken-4">Card Title<i class="material-icons right">close</i></span>
                                        <p><%= course.description%></p>
                                </div>
                        </div>
                </div>
                <% }); %>
        </div>

        <%include ../partials/footer%>
