<% include ../partials/header %>

<div class="content">
        <header class="jumbotron">
            <div class="container">
                <h1><img width="100px" src="http://muc.edu.om/Research_Centre/img/foundation.png"><%= course.name %></h1>
                <p>here all you need to know about the <strong><%= course.name %> </strong> Course </p>
                <a href="/courses/edit/<%= course._id %>" class="btn btn-success">Edit</a>
                <form style="display:inline;" action="/courses/<%= course._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </header>
        <div class="thumbnail">
            <div class="header">
                <h2>Course Description</h2>
            </div>
            <div class="content">
                <br/>
                <fieldset>
                    <p><%= course.description %></p>
                </fieldset>
            </div>
        </div>
</div>

<% include ../partials/footer %>
