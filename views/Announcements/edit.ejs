<%include ../partials/header%>

<div class="container-fluid">
        <div class="row ">
                    <div class="card">
    
                        <div class="header">
                            <h4 class="title">Edit Announcement</h4>
                            <br>
                        </div>
                

    <div class="content">
        <form  action="/courses/<%=course_id%>/announcement/<%=announcement.id%>?_method=PUT" method="POST" >

            <div class="row">

                <div class="form-group col-md-8 ">
                        <label for="announcement_name">announcement Header</label>
                    <input  name="announcement_name" type="text" class="form-control" required="required" value=<%=announcement.name%>>
                    
                </div>
            </div>
            <div class="row">
                    <div class="form-group col-md-12  ">
                 <label for="summernote">announcement Description</label>  
                   <textarea id="summernote" name="announcement_description" class="form-control" required="required">
                        <%=announcement.description%>
                   </textarea>
                    
                </div>
            </div>
                     <div class="row">
                   <div class="col-md-8">
                        <button class="btn btn-info btn-fill pull-left" type="submit">Edit Announcement </button>
                        </div>
            </div>  
        </form>
    </div>
   </div>
 </div>
</div>


<%include ../partials/footer%>




