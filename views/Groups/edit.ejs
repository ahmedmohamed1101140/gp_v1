<%include ../partials/header%>
<div class="container" >
    <div class="row">
         <h1 style="text-align: center;"> Edit  <%= group.name %> </h1>
    
         <div style="width:30%; margin:25px auto;">
           <form action="/groups/<%= group._id %>?_method=PUT" method="POST" >
            <div class="form-group"> 
                    <input class="form-control" type="text" name="name" value="<%= group.name %>" >
            </div>
            <div class="form-group"> 
                <label for="summernote">Group Description:</label>  
                <textarea id="summernote" name="description" class="form-control" required="required" ><%= group.description %></textarea>
             </div>
        
           <div class="form-group">
              <button class="btn btn-lg btn-primary btn-block"  > Edit!!</button>
            </div>
           </form>
          </div>
    </div>
    </div>


<%include ../partials/footer%>