
<%include ../partials/header%>
<div class="container">
    <header class="jumbotron">
        <div class="container">
        <h1>Welcome To Groups !</h1>
        <p>
           <a class="btn btn-primary btn-large" href="groups/new"> Add New Group </a>
        </p>
         </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% groups.forEach(function(groups){%>
                 <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                      <img src="<%= groups.image %>">
                      <div class="caption">
                         <h4><%= groups.name %></h4>
                      </div>
                      <p>
                          <a href="/groups/<%= groups._id %>" class="btn btn-primary"> More Info </a>
                      </p>
                    </div>
                 </div>
            <% }); %>
        </div>
</div>


<%include ../partials/footer%>