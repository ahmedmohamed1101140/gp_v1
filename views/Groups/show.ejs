<%include ../partials/header%>

<div class="container">
        <header class="jumbotron">
                <div class="container">
                    <h1><img width="1000px" src="<%=group.image%>"> </h1>
                    <h2> <%= group.name %> </h2>
                    <p>Forget About FaceBook and let's Talk here with your Instructors</p>
                    <% if (CurrentUSer.id == group.admin.id){%>
                        <a href="/groups/<%= group._id %>/edit" class="btn btn-lg btn-warning">Edit Group</a>
                        <form style="display:inline;" action="/groups/<%= group._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-lg btn-danger">Delete</button>
                        </form>
                        <a href="/groups/request/<%= group._id %>/Requests" type="submit" class="btn btn-lg btn-primary">All Requests</a>
                        <%  } %>
                   
                    <a href="/groups/<%=group._id%>/posts/new" class="btn btn-primary btn-lg" >Add new Post</a>                                
                </div>
            </header>

    </div>
    <div class="row">
        <div class="col-md-9">
            <div class="card-group">
            <%group.posts.forEach(function (post) {%>
                <div class="row posts">
                    <div class="col-md-1">
                        <img src="<%= post.author.userimage%>" class="img-thumbnail" alt="Image" width="80" height="80" alt="Card image cap">
                    </div>
                    <div class="col-md-11">
                        <div class="thumbnail">
                            <div class="thumbnail-body" style="margin-left: 20px">
                                <h4 class="thumbnail-title"><%=post.author.username%></h4>
                                <p  class="thumbnail-text"><%- post.content.substring(0,50)%>...</p>
                            </div>

                            <div class="thumbnail-footer" style="margin-left: 20px">
                                <hr>
                                <div class="row">
                                    <div class="col-md-9">
                                        <small class="text-muted"><%=post.created.toDateString()%></small>
                                    </div>
                                    <div class="col-md-3">
                                        <a href="/groups/<%=group._id%>/<%= post._id%>/comments/show" class="btn btn-primary btn-flat"><i class="fa fa-comments fa-fw"></i> Read More..</a>
                                        <br><br>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
             
                <% }); %>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <input class="form-control" type="text" name="search" id="search" placeholder="search...">
            </div>
            

        </div>
    </div>

</div>
<%include ../partials/footer%>